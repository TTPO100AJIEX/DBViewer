<nav class="surface closed" id="navigation">
    <h2 class="block_minheight">Навигация</h2>
    <menu class="no_bullets margin_vertical_enormous">
        <li class="desktop_hidden"><button class="control_empty maxwidth text_align_left navigation_closer" href="#">Закрыть меню</div></li>
        <li class="desktop_hidden"><hr></li>

        <% if (req.routerPath == "/database") { %> <li><div class="control_filled maxwidth">База данных: <%=databaseName%></div></li> <% }
        else { %> <li><a class="control_block maxwidth" href="/database">База данных: <%=databaseName%></a></li> <% } %>
        
        <li>
            <button class="<%=req.routerPath.startsWith('/table') ? 'control_filled' : 'control_block' %> maxwidth text_align_left dropdown_opener dropdown_arrow dropdown_opened" data-dropdown="nav_tables_dropdown">Таблицы</button>
            <menu id="nav_tables_dropdown" class="no_bullets dropdown_inplace" tabindex="-1">
                <% for (const table of tables)
                {
                    if (req.query.id == table.id) { %> <li><div class="control_empty maxwidth"><%=table.name%></div></li> <% }
                    else { %> <li><a class="control_block maxwidth" href="/table?id=<%=table.id%>"><%=table.name%></a></li> <% }
                } %>
            </menu>
        </li>

    </menu>
</nav>
<div id="navigation_backdrop" class="closed desktop_hidden"></div>